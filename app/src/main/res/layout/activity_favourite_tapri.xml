<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.FavouriteTapri">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/lightChai">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_light_selector"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/back_title"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_gravity="left|center"
                            android:padding="10dp"
                            android:src="@drawable/heart" />

                        <TextView
                            android:id="@+id/tvFavTapriName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:fontFamily="@font/rajdhani_bold"
                            android:padding="15dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginRight="110dp"
                            android:text="Bholenath \nNagori Tea"
                            android:textSize="20sp" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/back_profile">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="20dp"
                            android:src="@drawable/chaiwala1" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="95dp"
                        android:background="@color/colorAccent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_call_24" />

                        <TextView
                            android:id="@+id/textViewMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:padding="5dp"
                            android:text="+91 98765 43210"
                            android:textSize="20sp" />

                    </LinearLayout>


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="0.33"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rajdhani_bold"
                                android:gravity="center"
                                android:text="TEA"
                                android:textColor="@color/darkBrown"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/back_counter"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/textViewTeaCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/background"
                                    android:textSize="30sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivRemoveTea"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.2"
                                    android:src="@drawable/baseline_remove_circle_24" />

                                <ImageView
                                    android:id="@+id/ivAddTea"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.3"
                                    android:src="@drawable/baseline_add_circle_24" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="0.33"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTeaSugerFree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rajdhani_bold"
                                android:gravity="center"
                                android:text="TEA sugerfree"
                                android:textColor="@color/darkBrown"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/back_counter"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/textViewSugerFreeCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/background"
                                    android:textSize="30sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivRemoveSugerFree"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.2"
                                    android:src="@drawable/baseline_remove_circle_24" />

                                <ImageView
                                    android:id="@+id/ivAddSugerFree"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.3"
                                    android:src="@drawable/baseline_add_circle_24" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.33"

                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCoffee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rajdhani_bold"
                                android:gravity="center"
                                android:text="COFFEE"
                                android:textColor="@color/darkBrown"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/back_counter"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/textViewCoffeeCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/background"
                                    android:textSize="30sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivRemoveCoffee"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.2"
                                    android:src="@drawable/baseline_remove_circle_24" />

                                <ImageView
                                    android:id="@+id/ivAddCoffee"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.3"
                                    android:src="@drawable/baseline_add_circle_24" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:text="@string/see_full_menu"
                                android:textSize="20sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvClearOrder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/rajdhani_bold"
                            android:text="@string/clear_order"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"></View>

                        <TextView
                            android:id="@+id/tvFullMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/rajdhani_bold"
                            android:text="@string/see_full_menu"
                            android:textAlignment="textEnd"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/lightChai"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/back_spinner"
                        android:textAlignment="textStart"
                        android:theme="@style/Spinner" />


                    <!--<TextView-->
                    <!--android:id="@+id/tvTotal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_gravity="left"-->
                    <!--android:background="@color/lightBrown"-->
                    <!--android:fontFamily="@font/source_sans_pro_semibold"-->
                    <!--android:gravity="center"-->
                    <!--android:text="TOTAL: 0"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="20dp"-->

                    <!--/>-->


                    <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:background="@color/lightBrown"-->
                    <!--android:fontFamily="@font/source_sans_pro_semibold"-->
                    <!--android:gravity="center"-->
                    <!--android:text="PAYMENT MODE"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="20dp"-->

                    <!--/>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerPayment"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/back_spinner"
                        android:textAlignment="textStart"
                        android:theme="@style/Spinner"></android.support.v7.widget.AppCompatSpinner>
                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical">


                    <ImageView
                        android:id="@+id/imageViewMap"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/map"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvAddMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:text="@string/add_money"
                        android:textColor="@color/darkBrown"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/tvOrderHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:text="@string/order_history"
                        android:textSize="18sp"
                        android:textColor="@color/darkBrown"
                        android:layout_marginBottom="5dp"/>


                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="bottom"-->
        <!--android:background="@color/lightChai"-->
